---
export interface Props {
  size?: 'sm' | 'lg';
}

const { size = 'lg' } = Astro.props;

const isLg = size === 'lg';
---

<div class="flex flex-col items-start gap-4">
  <div class={`flex flex-wrap gap-3 ${isLg ? '' : 'gap-2'}`}>

    <!-- Apple App Store -->
    <a
      href="#ios-download"
      id="ios-download"
      class={`
        group inline-flex items-center gap-3 rounded-xl border-2 border-gray-900 dark:border-white
        bg-gray-900 dark:bg-white text-white dark:text-gray-900
        hover:-translate-y-0.5 hover:shadow-lg hover:shadow-gray-900/20 dark:hover:shadow-white/10
        transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-500 focus-visible:ring-offset-2
        ${isLg ? 'px-5 py-3' : 'px-4 py-2.5'}
      `}
      aria-label="Download on the App Store"
    >
      <!-- Apple icon -->
      <svg
        class={`flex-shrink-0 ${isLg ? 'w-6 h-6' : 'w-5 h-5'}`}
        viewBox="0 0 24 24"
        fill="currentColor"
        aria-hidden="true"
      >
        <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z" />
      </svg>

      <div class="flex flex-col leading-tight text-left">
        <span class={`font-normal opacity-75 ${isLg ? 'text-xs' : 'text-[10px]'}`}>
          Download on the
        </span>
        <span class={`font-semibold tracking-wide ${isLg ? 'text-base' : 'text-sm'}`}>
          App Store
        </span>
      </div>
    </a>

    <!-- Google Play -->
    <a
      href="#android-download"
      id="android-download"
      class={`
        group inline-flex items-center gap-3 rounded-xl border-2 border-gray-900 dark:border-white
        bg-gray-900 dark:bg-white text-white dark:text-gray-900
        hover:-translate-y-0.5 hover:shadow-lg hover:shadow-gray-900/20 dark:hover:shadow-white/10
        transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-500 focus-visible:ring-offset-2
        ${isLg ? 'px-5 py-3' : 'px-4 py-2.5'}
      `}
      aria-label="Get it on Google Play"
    >
      <!-- Google Play triangle icon -->
      <svg
        class={`flex-shrink-0 ${isLg ? 'w-6 h-6' : 'w-5 h-5'}`}
        viewBox="0 0 24 24"
        fill="currentColor"
        aria-hidden="true"
      >
        <path d="M3.18 23.76c.35.19.74.24 1.12.14l12.48-11.1-2.93-2.93L3.18 23.76z" fill="#EA4335"/>
        <path d="M20.65 10.54l-2.97-1.67-3.3 2.93 3.3 3.3 2.97-1.67c.85-.48.85-2.42 0-2.89z" fill="#FBBC04"/>
        <path d="M4.3.1C3.92 0 3.53.05 3.18.24L14.85 11.9l2.93-2.93L4.3.1z" fill="#4285F4"/>
        <path d="M3.18.24c-.7.4-1.18 1.18-1.18 2.18v19.16c0 1 .48 1.77 1.18 2.18l.1.06L14.85 12v-.29L3.28.18l-.1.06z" fill="#34A853"/>
      </svg>

      <div class="flex flex-col leading-tight text-left">
        <span class={`font-normal opacity-75 ${isLg ? 'text-xs' : 'text-[10px]'}`}>
          Get it on
        </span>
        <span class={`font-semibold tracking-wide ${isLg ? 'text-base' : 'text-sm'}`}>
          Google Play
        </span>
      </div>
    </a>
  </div>

  <p class={`text-gray-500 dark:text-gray-400 ${isLg ? 'text-sm' : 'text-xs'}`}>
    Coming soon to the App Store and Google Play
  </p>
</div>
