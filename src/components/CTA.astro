---
import DownloadButtons from './DownloadButtons.astro';
---

<section
  class="relative overflow-hidden py-20 lg:py-28"
  aria-labelledby="cta-heading"
>
  <!-- Gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-brand-600 via-brand-700 to-brand-900" aria-hidden="true"></div>

  <!-- Decorative elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <div class="absolute -top-20 -right-20 w-80 h-80 rounded-full bg-brand-500 opacity-20 blur-3xl"></div>
    <div class="absolute -bottom-20 -left-20 w-96 h-96 rounded-full bg-brand-800 opacity-40 blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full opacity-5">
      <!-- Subtle grid pattern -->
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="cta-grid" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
            <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#cta-grid)" />
      </svg>
    </div>
  </div>

  <!-- Content -->
  <div class="relative mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">

    <div class="reveal">
      <h2
        id="cta-heading"
        class="font-heading text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-4 leading-tight"
      >
        Paperwork,&nbsp;<span class="text-brand-200">Sorted.</span>
      </h2>

      <p class="text-lg sm:text-xl text-brand-100 mb-10 max-w-xl mx-auto leading-relaxed">
        Join thousands getting their PDFs done in seconds, not minutes. Free to start, no credit card required.
      </p>

      <!-- Download buttons — light treatment on dark bg -->
      <div class="flex justify-center mb-8">
        <div class="[&_a]:border-white [&_a]:bg-white [&_a]:text-gray-900 [&_a:hover]:bg-brand-50 [&_p]:text-brand-200">
          <DownloadButtons size="lg" />
        </div>
      </div>

      <!-- Trust signals -->
      <div class="flex flex-wrap items-center justify-center gap-6 text-brand-200 text-sm">
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-brand-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          AES-256 encrypted
        </span>
        <span class="text-brand-500" aria-hidden="true">·</span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-brand-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          Cancel anytime
        </span>
        <span class="text-brand-500" aria-hidden="true">·</span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-brand-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          4.9 / 5 rating
        </span>
      </div>
    </div>
  </div>
</section>
