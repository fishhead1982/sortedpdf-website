---
import DownloadButtons from './DownloadButtons.astro';
---

<section
  class="relative overflow-hidden bg-gradient-to-br from-brand-50 via-white to-white dark:from-surface-900 dark:via-surface-900 dark:to-surface-800 pt-20 pb-24 lg:pt-28 lg:pb-32"
  aria-label="Hero"
>
  <!-- Background decorative blobs -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <div class="absolute -top-40 -right-40 w-96 h-96 rounded-full bg-brand-100 dark:bg-brand-950 opacity-40 blur-3xl"></div>
    <div class="absolute top-1/2 -left-20 w-72 h-72 rounded-full bg-brand-200 dark:bg-brand-900 opacity-30 blur-3xl"></div>
    <div class="absolute -bottom-20 right-1/4 w-64 h-64 rounded-full bg-accent-400 dark:bg-accent-600 opacity-10 blur-3xl"></div>
  </div>

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">

      <!-- Left: Copy -->
      <div class="flex-1 text-center lg:text-left max-w-xl mx-auto lg:mx-0">

        <!-- Eyebrow badge -->
        <div class="inline-flex items-center gap-2 px-3 py-1.5 mb-6 rounded-full bg-brand-100 dark:bg-brand-950 border border-brand-200 dark:border-brand-800 text-brand-700 dark:text-brand-300 text-sm font-medium reveal">
          <span class="w-1.5 h-1.5 rounded-full bg-brand-500 animate-pulse" aria-hidden="true"></span>
          AI-Powered PDF Form Filling
        </div>

        <h1 class="reveal font-heading text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight tracking-tight text-gray-900 dark:text-white mb-6">
          Get Your
          <span class="block text-brand-500">PDFs Sorted</span>
        </h1>

        <p class="reveal text-lg sm:text-xl text-gray-600 dark:text-gray-300 leading-relaxed mb-8">
          AI-powered form filling and receipt scanning. Snap a photo, let AI do the rest. Your details saved once, every form filled in seconds.
        </p>

        <div class="reveal flex justify-center lg:justify-start mb-8">
          <DownloadButtons size="lg" />
        </div>

        <!-- Trust badges -->
        <div class="reveal flex flex-wrap items-center justify-center lg:justify-start gap-x-5 gap-y-2">
          {['No credit card required', 'Free to start', 'Works offline'].map((badge) => (
            <span class="flex items-center gap-1.5 text-sm text-gray-500 dark:text-gray-400">
              <svg class="w-4 h-4 text-brand-500 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              {badge}
            </span>
          ))}
        </div>
      </div>

      <!-- Right: CSS phone mockup -->
      <div class="reveal flex-1 flex items-center justify-center lg:justify-end w-full max-w-xs lg:max-w-sm" aria-hidden="true">

        <!-- Phone shell -->
        <div class="relative">
          <!-- Glow -->
          <div class="absolute inset-0 rounded-[3rem] bg-brand-400 dark:bg-brand-600 opacity-20 blur-2xl scale-95 translate-y-4"></div>

          <!-- Phone body -->
          <div class="relative w-64 h-[520px] rounded-[3rem] bg-white dark:bg-surface-800 border-[3px] border-gray-300 dark:border-surface-600 shadow-2xl overflow-hidden">

            <!-- Notch -->
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-24 h-7 bg-gray-200 dark:bg-surface-700 rounded-b-2xl z-10"></div>

            <!-- Screen content -->
            <div class="absolute inset-0 bg-gray-50 dark:bg-surface-900 pt-10 px-4 pb-4 flex flex-col">

              <!-- App header bar -->
              <div class="flex items-center justify-between mb-4 mt-1">
                <div class="flex items-center gap-1.5">
                  <div class="w-5 h-5 rounded bg-brand-500 flex items-center justify-center">
                    <span class="text-white text-[8px] font-bold">S</span>
                  </div>
                  <span class="text-gray-900 dark:text-white text-xs font-semibold font-heading">SortedPDF</span>
                </div>
                <div class="w-6 h-6 rounded-full bg-brand-100 dark:bg-brand-900 flex items-center justify-center">
                  <div class="w-2 h-2 rounded-full bg-brand-500"></div>
                </div>
              </div>

              <!-- PDF form simulation -->
              <div class="flex-1 bg-white dark:bg-surface-800 rounded-2xl shadow-sm border border-gray-100 dark:border-surface-700 p-3 overflow-hidden">

                <!-- Form header -->
                <div class="mb-3 pb-2 border-b border-gray-100 dark:border-surface-700">
                  <div class="h-2 w-3/4 bg-gray-300 dark:bg-surface-600 rounded-full mb-1.5"></div>
                  <div class="h-1.5 w-1/2 bg-gray-200 dark:bg-surface-700 rounded-full"></div>
                </div>

                <!-- Form fields â€” simulated as filled boxes -->
                {[
                  { label: 'Full Name', value: 'Sarah Johnson', filled: true },
                  { label: 'Date of Birth', value: '15 / 03 / 1989', filled: true },
                  { label: 'Address', value: '42 Bridge St, Sydney', filled: true },
                  { label: 'Phone', value: '+61 400 123 456', filled: true },
                  { label: 'Tax File Number', value: '123 456 789', filled: true },
                  { label: 'Signature', value: '', filled: false },
                ].map((field) => (
                  <div class="mb-2">
                    <div class="text-[7px] text-gray-400 dark:text-gray-500 uppercase tracking-wide mb-0.5 font-medium">
                      {field.label}
                    </div>
                    <div class={`
                      h-6 rounded-md px-2 flex items-center text-[8px] font-medium
                      ${field.filled
                        ? 'bg-brand-50 dark:bg-brand-950 border border-brand-200 dark:border-brand-800 text-brand-700 dark:text-brand-300'
                        : 'bg-gray-100 dark:bg-surface-700 border border-dashed border-gray-300 dark:border-surface-600 text-gray-400 dark:text-gray-500'
                      }
                    `}>
                      {field.filled ? field.value : 'Tap to sign'}
                    </div>
                  </div>
                ))}
              </div>

              <!-- Bottom action bar -->
              <div class="flex gap-2 mt-3">
                <div class="flex-1 h-8 rounded-xl bg-brand-500 flex items-center justify-center">
                  <span class="text-white text-[9px] font-semibold font-heading">Export PDF</span>
                </div>
                <div class="w-8 h-8 rounded-xl bg-gray-100 dark:bg-surface-700 flex items-center justify-center">
                  <div class="w-3 h-3 border border-gray-400 dark:border-gray-500 rounded-sm" style="border-top-right-radius: 0; position: relative; overflow: visible;">
                    <div class="absolute -top-0.5 -right-0.5 w-1.5 h-1.5 bg-accent-500 rounded-full"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating "AI detected" badge -->
          <div class="absolute -left-6 top-1/3 bg-white dark:bg-surface-800 rounded-2xl shadow-xl border border-gray-100 dark:border-surface-700 px-3 py-2 flex items-center gap-2">
            <div class="w-7 h-7 rounded-full bg-brand-100 dark:bg-brand-900 flex items-center justify-center flex-shrink-0">
              <svg class="w-3.5 h-3.5 text-brand-600 dark:text-brand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <p class="text-[9px] font-semibold text-gray-900 dark:text-white leading-tight">AI Detected</p>
              <p class="text-[8px] text-gray-500 dark:text-gray-400 leading-tight">5 fields found</p>
            </div>
          </div>

          <!-- Floating "Filled" badge -->
          <div class="absolute -right-8 bottom-1/3 bg-white dark:bg-surface-800 rounded-2xl shadow-xl border border-gray-100 dark:border-surface-700 px-3 py-2 flex items-center gap-2">
            <div class="w-7 h-7 rounded-full bg-green-100 dark:bg-green-900 flex items-center justify-center flex-shrink-0">
              <svg class="w-3.5 h-3.5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <div>
              <p class="text-[9px] font-semibold text-gray-900 dark:text-white leading-tight">Auto-filled</p>
              <p class="text-[8px] text-gray-500 dark:text-gray-400 leading-tight">30 seconds</p>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
